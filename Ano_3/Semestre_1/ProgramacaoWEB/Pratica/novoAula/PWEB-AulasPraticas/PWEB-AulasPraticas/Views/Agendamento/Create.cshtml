@model PWEB_AulasPraticas1.Models.Agendamento

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Agendamento</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="DataInicio"></label>
        <input asp-for="DataInicio" class="form-control" />
        <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataFim"></label>
        <input asp-for="DataFim" class="form-control" />
        <span asp-validation-for="DataFim" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DuracaoEmHoras"></label>
        <input asp-for="DuracaoEmHoras" class="form-control" />
        <span asp-validation-for="DuracaoEmHoras" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DuracaoEmMinutos"></label>
        <input asp-for="DuracaoEmMinutos" class="form-control" />
        <span asp-validation-for="DuracaoEmMinutos" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataHoraDoPedido"></label>
        <input asp-for="DataHoraDoPedido" class="form-control" />
        <span asp-validation-for="DataHoraDoPedido" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
